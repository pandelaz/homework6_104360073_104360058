<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hongyi.sqlite_samlpe.Main2Activity">

    <RelativeLayout
        android:id="@+id/ProductInfomation"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/title01" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_below="@id/imageView4"
            app:srcCompat="@drawable/shop64" />

        <LinearLayout
            android:id="@+id/idimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView3"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/CustomerName"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:paddingTop="2dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <TextView
            android:id="@+id/ShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView4"
            android:layout_toRightOf="@id/imageView3"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:text="商店名稱"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@id/imageView3"
            android:layout_below="@id/ShopName"
            android:paddingLeft="10dp"
            android:text="TELE : "
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tele"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@id/textView6"
            android:layout_below="@id/ShopName"
            android:layout_weight="1"
            android:text="789"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@id/imageView3"
            android:layout_below="@id/textView6"
            android:paddingLeft="10dp"
            android:text="Address : "
            android:textSize="16dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@id/textView4"
            android:layout_below="@id/textView6"
            android:maxLines="1"
            android:text="123"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@id/imageView3"
            android:layout_below="@id/textView4"
            android:paddingLeft="10dp"
            android:text="Info : "
            android:textSize="16dp" />

        <TextView
            android:id="@+id/Info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@id/textView7"
            android:layout_below="@id/textView4"
            android:text="123"
            android:textSize="16dp" />

        <GridView
            android:id="@+id/listview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnlayout"
            android:layout_below="@id/imageView3"
            android:paddingTop="10dp"
            android:gravity="center"
            android:numColumns="2" />

        <LinearLayout
            android:id="@+id/btnlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Add new product" />

            <Button
                android:id="@+id/deleteOld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/listview1"
                android:layout_toRightOf="@id/addNew"
                android:layout_weight="1"
                android:text="Edit product" />
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
