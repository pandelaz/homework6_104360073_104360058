<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hongyi.sqlite_samlpe.Main3Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/title03" />


        <LinearLayout
            android:id="@+id/idimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView14"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/CustomerName"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:paddingTop="2dp"
                android:scaleType="fitXY" />

        </LinearLayout>

        <TextView
            android:id="@+id/shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:layout_toRightOf="@id/imageView14"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:text="商店名稱"
            android:textSize="16dp" />


        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/imageView2"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            app:srcCompat="@drawable/shop64" />

        <ListView
            android:id="@+id/listview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/idimg"
            android:paddingTop="5dp"
            android:layout_above="@id/btnlayout"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
